<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-control">
    <%= form.label :product_name %>
    <%= form.text_field :product_name %>
  </div>

  <div class="form-control">
    <%= form.label :purchase_amount %>
    <%= form.text_field :purchase_amount %>
  </div>

  <div class="form-control">
    <%= form.label :sale_amount %>
    <%= form.text_field :sale_amount %>
  </div>

  <div class="form-control">
    <%= form.label :stock %>
    <%= form.number_field :stock %>
  </div>

  <div class="form-control">
    <%= form.label :branch_office_id %>
    <%= form.collection_select(:branch_office_id, BranchOffice.all, :id, :address) %>
  </div>

  <div class="form-control">
    <%= form.label :category_id %>
    <%= form.collection_select(:category_id, Category.all, :id, :category_name) %>
  </div>

  <div class="actions form-control">
    <%= form.submit %>
  </div>
<% end %>
